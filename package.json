{
  "name": "contract-verifier",
  "version": "1.0.0",
  "description": "A Node.js CLI tool to automate smart contract verification on block explorers like Etherscan and Polygonscan",
  "main": "src/index.js",
  "bin": {
    "contract-verifier": "./bin/verify.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "node bin/verify.js",
    "dev": "npm link && echo 'Package linked globally for development'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shaurya2k06/contract-verifier.git"
  },
  "keywords": [
    "web3",
    "etherscan",
    "polygon",
    "smart-contract",
    "cli",
    "verifier"
  ],
  "author": "Shaurya",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Shaurya2k06/contract-verifier/issues"
  },
  "homepage": "https://github.com/Shaurya2k06/contract-verifier#readme",
  "dependencies": {
    "axios": "^1.10.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.0",
    "fs-extra": "^11.3.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
}
